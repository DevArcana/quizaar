<Window x:Class="QuizaarDesktopUI.Views.ShellView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QuizaarDesktopUI.Views"
        mc:Ignorable="d"
        Title="ShellView" Height="450" Width="800">
    <DockPanel>
        <Menu DockPanel.Dock="Top" FontSize="18">
            <MenuItem Header="_File">
                <MenuItem x:Name="ExitApplication" Header="E_xit"/>
            </MenuItem>
            <MenuItem Header="_Questions">
                <MenuItem x:Name="ShowQuestionsShowView" Header="_Show"/>
                <MenuItem x:Name="ShowQuestionsAddView" Header="_Add"/>
            </MenuItem>
            <MenuItem Header="_Categories">
                <MenuItem x:Name="ShowCategoriesShowView" Header="_Show"/>
                <MenuItem x:Name="ShowCategoriesAddView" Header="_Add"/>
            </MenuItem>
        </Menu>
        <Grid>
            <ContentControl x:Name="ActiveItem" Padding="10"/>
        </Grid>
    </DockPanel>
</Window>
